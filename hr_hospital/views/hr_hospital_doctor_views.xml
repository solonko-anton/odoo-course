<odoo>
    <record id="view_hr_hospital_doctors_tree" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.tree</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="specialty"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_hospital_doctors_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.form</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="specialty"/>
                        <field name="phone"/>
                        <field name="email"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_hospital_doctors" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hr.hospital.doctor</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hr_hospital_doctor_menu"
            action="action_hr_hospital_doctors"
            parent="hr_hospital_main_menu" 
            name="Doctors" 
            sequence="20"/>
</odoo>