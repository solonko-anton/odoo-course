<odoo>

    <record id="view_hr_hospital_patients_tree" model="ir.ui.view">
        <field name="name">hr.hospital.patient.tree</field>
        <field name="model">hr.hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/> 
            </tree>
        </field>
    </record>

    <record id="view_hr_hospital_patients_form" model="ir.ui.view">
        <field name="name">hr.hospital.patient.form</field>
        <field name="model">hr.hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="contact_number"/>
                        <field name="address"/>
                        <field name="gender"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_hospital_patients" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hr.hospital.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hr_hospital_patient_views_menu" 
            name="Patients" 
            action="action_hr_hospital_patients"
            parent="hr_hospital_main_menu"
            sequence="30"/>

</odoo>