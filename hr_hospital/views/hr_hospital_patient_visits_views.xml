<odoo>
    <record id="view_hr_hospital_patient_visits_tree" model="ir.ui.view">
        <field name="name">hr.hospital.patient.visits.tree</field>
        <field name="model">hr.hospital.patient.visits</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="visit_date"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_hospital_patient_visits_form" model="ir.ui.view">
        <field name="name">hr.hospital.patient.visits.form</field>
        <field name="model">hr.hospital.patient.visits</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                        <field name="disease_ids" widget="many2many_tags"/>
                        <field name="visit_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_hospital_patient_visits" model="ir.actions.act_window">
        <field name="name">Patient Visits</field>
        <field name="res_model">hr.hospital.patient.visits</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hr_hospital_patient_visits_menu" 
            name="Patient Visits" 
            action="action_hr_hospital_patient_visits"
            parent="hr_hospital_main_menu"
            sequence="40"/>
</odoo>